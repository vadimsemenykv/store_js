{
  "name": "grains_store",
  "version": "0.0.1",
  "main": "server.js",
  "scripts": {
    "clean": "rm -rf ./build",
    "build:server": "BABEL_ENV=server babel ./src -d build",
    "build:watch:server": "BABEL_ENV=server babel ./src -d build --watch",
    "build:client": "webpack --config ./webpack.config.js/",
    "build:prod:client": "webpack --config ./webpack.prod.config.js/",
    "build:watch:client": "webpack --config ./webpack.config.js/ --watch",
    "build:prod": "npm run build:server && npm run build:client",
    "build:watch:all": "parallelshell 'npm run build:watch:server' 'npm run build:watch:client'",
    "start": "npm run build:prod && NODE_ENV=production node ./build/server/index.js",
    "start:server:dev": "parallelshell 'npm run build:watch:server' 'nodemon ./build/server/index.js'",
    "start:dev": "parallelshell 'npm run build:watch:server' 'npm run build:watch:client' 'nodemon ./build/server/index.js'",
    "start:dev:pm": "parallelshell 'npm run build:watch:server' 'npm run build:watch:client' 'pm2-runtime process.dev.yml'"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "bootstrap": "^4.1.1",
    "connect-redis": "^3.3.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-named-router-url-generator": "^1.0.9",
    "express-session": "^1.15.6",
    "mongoose": "^5.1.3",
    "password-hash": "^1.2.2",
    "prop-types": "^15.6.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-redux": "^5.0.7",
    "reactstrap": "^6.0.1",
    "redux": "^4.0.0",
    "redux-thunk": "^2.2.0",
    "validator": "^10.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-css-modules-transform": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.4",
    "optimize-css-assets-webpack-plugin": "^4.0.1",
    "parallelshell": "^3.0.2",
    "postcss-loader": "^2.1.5",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4"
  }
}
