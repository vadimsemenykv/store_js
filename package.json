{
  "name": "grains_store",
  "version": "0.0.1",
  "main": "server.js",
  "scripts": {
    "clean": "rm -rf ./build",
    "build:server": "babel ./src -d build",
    "build:watch:server": "babel ./src -d build --watch",
    "build:client": "webpack --config ./webpack.config.js/",
    "build:prod:client": "webpack --config ./webpack.prod.config.js/",
    "build:watch:client": "webpack --config ./webpack.config.js/ --watch",
    "build:prod": "npm run build:server && npm run build:client",
    "start": "npm run build:prod && NODE_ENV=production node ./build/server/index.js",
    "start:dev": "parallelshell 'npm run build:watch:server' 'npm run build:watch:client' 'nodemon ./build/server/index.js'",
    "start:dev:pm": "parallelshell 'npm run build:watch:server' 'npm run build:watch:client' 'pm2-runtime process.dev.yml'"
  },
  "dependencies": {
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "express-dot-engine": "^1.0.7",
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^1.17.4",
    "parallelshell": "^3.0.2",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4"
  }
}
